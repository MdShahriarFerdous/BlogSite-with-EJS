<%- include("partials/header"); -%>

<h1>Home</h1>
<p><%= homePara %></p>

 <% formDatas.forEach(function(formData){%>
    <h1><%=formData.postTitleName%></h1>
   <% if(formData.postBodyPara.length > 100){%>
    <p><%=formData.postBodyPara.substring(0,100) +"...";%> <a href="/posts/<%=formData._id%> "> Read more</a> </p>
   <% } else {%>
      <p><%=formData.postBodyPara%></p>
   <% } %>
 <% });%>

<%- include("partials/footer"); -%>
